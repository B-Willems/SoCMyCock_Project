bool AudioPlayer_IsBusy(void)
{
	return _Busy;
}

void AudioPlayer_SendTestSignal(u32 Cycles,short int type, char octave )
{

	_TestSignalCycles = Cycles;
	_UseTestSignal = true;
	_Busy = true;

	if(Cycles > 0x01)
	{
		XLlFifo_IntEnable(&_Fifo, XLLF_INT_ALL_MASK);
	}

	if(type ==1){if(octave >=4){AudioPlayer_ChangeFreq(2,octave); } AudioPlayer_CopyBuffer(_TestSignal);}
	if(type ==2){AudioPlayer_ChangeFreq(2,octave);	AudioPlayer_CopyBuffer(_SquareTest);}
	if(type ==3){AudioPlayer_ChangeFreq(2,octave);	AudioPlayer_CopyBuffer(_TriangleTest);}
	if(type ==4){AudioPlayer_ChangeFreq(2,octave);	AudioPlayer_CopyBuffer(_SpecialTest);}
	//AudioPlayer_CopyBuffer();
}

void AudioPlayer_Stop(void)
{
	XLlFifo_IntDisable(&_Fifo, XLLF_INT_ALL_MASK);
}
